<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chenguang.simpleclock">

    <application
        android:name=".SimpleClockApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_clock_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_clock_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".addalarm.AddAlarmActivity"></activity>
        <activity android:name=".searchtimezone.SearchTimezoneActivity" />
        <activity
            android:name=".clock.MainClockActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".addalarm.AlarmReceiver" />
    </application>

</manifest>